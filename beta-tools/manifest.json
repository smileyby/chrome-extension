{
  "name": "beta-tools",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "用于开发环境同步缓存，以及查看常用文档",
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
 },
  "browser_action": {
    "default_title": "beta-tools",
    "default_icon": "img/logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "chrome_url_overrides" : {
    "newtab": "tabPage.html"
  },
  "permissions": [
    "storage", "tabs"
  ]
}